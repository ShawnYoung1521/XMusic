<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/holo_blue_dark</item>
    </style>
    <style name="pop_window_anim"  parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_out</item>
    </style>

    <declare-styleable name="DashboardScaleView">
        <attr name="angle" format="integer" />
        <attr name="minAngle" format="integer" />
        <attr name="maxAngle" format="integer" />
        <attr name="dashboardType">
            <enum name="fl" value="0" />
            <enum name="fr" value="1" />
            <enum name="rl" value="2" />
            <enum name="rr" value="3" />
            <enum name="sound_1" value="4" />
            <enum name="sound_2" value="5" />
            <enum name="sound_3" value="6" />
            <enum name="sound_4" value="7" />
            <enum name="sound_5" value="8" />
            <enum name="sound_6" value="9" />
        </attr>
    </declare-styleable>
    <style name="dsp_btn_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
</resources>