<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:gravity="center|left"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/all_music_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/all_music_icon"
        android:layout_toLeftOf="@+id/music_isplaying"
        android:paddingBottom="7dp"
        >

        <TextView
            android:id="@+id/music_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/music_tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/music_isplaying"
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/playing"/>
</RelativeLayout>
